<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

<!--    <TextView-->
<!--            android:gravity="center"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/server_list_name"-->
<!--            android:layout_weight="3"/>-->

    <CheckBox
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_isMine"
            android:clickable="false"
            android:layout_weight="1"/>
    <CheckBox
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_isParticipant"
            android:clickable="false"
            android:layout_weight="1"/>

    <TextView
            android:id="@+id/text_game_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"/>

    <Button
            android:text="@string/join_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_join_game"
            android:layout_weight="4"/>

    <Button
            android:text="@string/delete_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_delete_game"
            android:layout_weight="4"/>

</LinearLayout>